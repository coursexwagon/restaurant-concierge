# Restaurant Concierge Agent - Environment Configuration
# Copy this file to .env and fill in your values

# =================== LLM CONFIGURATION ===================
# Choose provider: openai, anthropic, ollama, openrouter, deepseek, groq
LLM_PROVIDER=openrouter
# Model to use (leave empty for auto-select)
LLM_MODEL=
# API Keys (get free keys at openrouter.ai/keys)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
# For Ollama local: use http://localhost:11434
OLLAMA_BASE_URL=http://localhost:11434

# =================== AGENT CONFIG ===================
AGENT_NAME=Restaurant Concierge
AGENT_PERSONALITY=warm,friendly,professional
# Secret key for JWT tokens (auto-generated on first run)
JWT_SECRET=

# =================== BUSINESS INFO ===================
BUSINESS_NAME=My Restaurant
BUSINESS_TYPE=restaurant
OWNER_PHONE=

# =================== NOTIFICATIONS ===================
NOTIFY_ORDERS=true
NOTIFY_BOOKINGS=true
NOTIFY_COMPLAINTS=true

# =================== CHANNELS ===================
CHANNELS_WHATSAPP=true
CHANNELS_TELEGRAM=false
CHANNELS_WEB=true
CHANNELS_DASHBOARD=true

# =================== PORTS ===================
GATEWAY_PORT=18789
DASHBOARD_PORT=3000

# =================== SECURITY ===================
# Encryption key for API keys at rest (auto-generated)
ENCRYPTION_KEY=
# Rate limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000
